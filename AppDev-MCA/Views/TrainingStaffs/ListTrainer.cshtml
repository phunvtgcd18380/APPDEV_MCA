@model IEnumerable<AppDev_MCA.Models.TrainerUser>
@{
    ViewBag.Title = "ListTrainer";
}
<h2>List Trainer Account</h2>
@Html.ActionLink("Back to Manage Account", "ManageAccount", "TrainingStaffs",
    null,
    new { @class = "btn btn-primary" })
@using (Html.BeginForm("ListTrainer", "TrainingStaffs", "POST"))
{
    <div class="form-group">
        <label for="fname">Search by Trainee Name:</label><br>
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>TrainerName</th>
            <th>Phone Number</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Telephone</td>

            <td>
                @Html.ActionLink("AssignCourse", "AssignCourse", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("ViewCourse", "ViewCourseAssigned", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Update Profile", "UpdateProfileTrainer", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Remove User", "RemoveTrainer", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Detail", "DetailProfileTrainer", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>

        </tr>
        }
    </tbody>
</table>
@model AppDev_MCA.ViewModel.TraineeUserCoursesViewModel
@{
    ViewBag.Title = "AssignCourseTrainee";
}

<h2>AssignCourseTrainee</h2>
<div class="form-group">
    @Html.ActionLink("Back to List Trainee", "ListTrainee", "TrainingStaffs",
null,
new { @class = "btn btn-primary" })
</div>
@using (Html.BeginForm("AssignCourseTrainee", "TrainingStaffs", "POST"))
{
    <div class="form-group">
        @Html.DisplayFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TraineeUser.Course.Name)
        @Html.DropDownListFor(model => model.TraineeUser.CourseId, new SelectList(Model.Courses, "Id", "Name"))
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">AssignCourse</button>
    </div>
}

@model AppDev_MCA.ViewModel.UserCoursesViewModel
@{
    ViewBag.Title = "AssignCourse";
}

<h2>Assign Course</h2>
<div class="form-group">
    @Html.ActionLink("Back to List Trainer", "ListTrainer", "TrainingStaffs",
null,
new { @class = "btn btn-primary" })
</div>
@using (Html.BeginForm("AssignCourse", "TrainingStaffs", "POST"))
{
    <div class="form-group">
        @Html.DisplayFor(model => model.User.UserName)
        @Html.HiddenFor(model => model.User.Id)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.TrainerUser.Course.Name)
        @Html.DropDownListFor(model => model.TrainerUser.CourseId, new SelectList(Model.Courses, "Id", "Name"))
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">AssignCourse</button>
    </div>
}


@model AppDev_MCA.Models.RegisterViewModel
@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>
<div class="form-group">
    @Html.ActionLink("Back to Home", "Index", "Trainees",
null,
new { @class = "btn btn-primary" })
</div>
@using (Html.BeginForm("ChangePassword", "Trainees", "POST"))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Confirm Change Password</button>
    </div>
}